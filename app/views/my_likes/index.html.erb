<div class="page-header">
  <h1>
    My Likes
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Caption</th>
        <th>Image</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @current_user.liked_photos.each do |liked_photo| %>
      <tr>
        <td><%= liked_photo.caption %></td>
        <td><img src ="<%= liked_photo.image %>" width ="200"></td>
        <td><%= liked_photo.user.username %></td>
        <td>
          <a href="/photos/<%= liked_photo.id %>" class="btn btn-primary">Show</a>
          <a href="/photos/<%= liked_photo.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_photo/<%= liked_photo.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
